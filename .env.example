# Server Configuration
PORT=3000
NODE_ENV=development

# Database
DATABASE_PATH=./data/quiz-game.db

# Redis (optional - for horizontal scaling)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_ENABLED=false

# Game Settings
MAX_PLAYERS=10
QUESTION_DURATION=15000
MIN_PLAYERS=1

# Features
ENABLE_CHAT=true
ENABLE_SOUND=true
ENABLE_STATS=true
ENABLE_SPECTATOR_MODE=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
CHAT_RATE_LIMIT_MS=1000

# CORS
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
